<%= form_tag(invoices_pdf_path, method: :post, id: "hour_to_bill_form") %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Select</th>
      <th scope="col">Date</th>
      <th scope="col">Start time</th>
      <th scope="col">End time</th>
      <th scope="col">Description</th>
      <th scope="col">Client</th>
      <th scope="col">Fatturata?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hours.each do |hour| %>
      <tr class='<%= hour.is_fatturata ? 'table-success' : 'table-danger' %>'>
        <td><%= check_box_tag "hour_ids[]", hour.id if (!hour.is_fatturata)%></td>
        <td><%= hour.date %></td>
        <td><%= hour.start_time.strftime('%H:%M') %></td>
        <td><%= hour.end_time.strftime('%H:%M') %></td>
        <td><%= hour.description %></td>
        <td><%= Client.find(hour.client_id).name %></td>
        <td><%= hour.is_fatturata %></td>
        <td><%= link_to 'Show', hour %></td>
        <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
        <td><%= link_to 'Destroy', hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Hour', new_hour_path(:client_base_id => @client.id), class: "btn btn-primary" %>
<%= link_to 'New Client', new_client_path, class: "btn btn-primary float-right" %>
<br><br>
<%= submit_tag "Create bill", class: "btn btn-primary", style: "float=left" %>
