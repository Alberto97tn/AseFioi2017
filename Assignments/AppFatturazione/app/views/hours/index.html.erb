<p id="notice"><%= notice %></p>

<h1>Hours</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Description</th>
      <th>User</th>
      <th>Client</th>
      <th>Fatturata?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hours.each do |hour| %>
      <tr>
        <td  scope="row"><%= hour.date %></td>
        <td><%= hour.start_time.strftime('%H:%M') %></td>
        <td><%= hour.end_time.strftime('%H:%M') %></td>
        <td><%= hour.description %></td>
        <td><%= User.find(hour.user_id).name %></td>
        <td><%= Client.find(hour.client_id).name %></td>
        <td><%= hour.is_fatturata %></td>
        <td><%= link_to 'Show', hour %></td>
        <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
        <td><%= link_to 'Destroy', hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

