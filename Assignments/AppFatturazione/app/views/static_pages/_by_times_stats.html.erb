  <div class="tab-pane fade" id="pills-day" role="tabpanel" aria-labelledby="pills-day-tab"><%= line_chart Hour.where(user_id: current_user.id).group_by_day_of_month(:created_at).count %></div>
  <div class="tab-pane fade" id="pills-month" role="tabpanel" aria-labelledby="pills-month-tab"><%= line_chart Hour.where(user_id: current_user.id).group_by_month(:created_at, format: "%b %Y").count %></div>
